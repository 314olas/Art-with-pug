include variables
    include mixins

section.seen-on
    .justify-content-center
        +headingWithoutParagraph('as seen on')
    .container
        .row
            .col-12.col-lg-2
                .d-flex.justify-content-center
                    img(src="img/CNN.png" alt='CNN')
            .col-12.col-lg-2
                .d-flex.justify-content-center
                    img(src="img/TC.png" alt='TC')
            .col-12.col-lg-3
                .d-flex.justify-content-center
                    img(src="img/BBC.png" alt='BBC')
            .col-12.col-lg-5
                .d-flex.justify-content-center
                    img(src="img/NYT.png" alt='The New York times')
