mixin linkList(items, activeLink)
    ul.navbar-nav
        - for (var i = 0; i < items.length; i++)
            if i == activeLink
                li.nav-item.active
                    a.nav-link(href="#")= items[i]
            else
                li.nav-item
                    a.nav-link(href="#")= items[i]

mixin card(obj)
    .row
        each item in obj
            .col-lg-4
                .card
                    .card-img-top
                        span(class= item.class)
                    .card-body
                        .card-title.text-center
                            h3= item.title
                        .content.card-text.text-center
                            p= item.text
                        .text-center
                            a.btn.btn-sm.btn-primary(href="#") Learn more

mixin heading(title, content, theme)
    if theme == undefined
        .row.justify-content-center
            .col-lg-6
                .common-text-block
                    .title-decoration.text-center
                        h3= title
                    .text-center.default-content-color
                        p= content
    else if theme !== undefined
        .row.justify-content-center
            .col-lg-6
                .common-heading-block
                    .title-decoration.text-center.mb-2.primary-title-color
                        h3= title
                    .text-center.text-success
                        p= content

mixin headingWithoutParagraph(title)
    .title-holder.title-decoration.text-center.mb-4.text-uppercase
        h4= title

mixin addImg(arr)
    .container.common-section
        .row.justify-content-center
            .col-lg-10
                .row
                    - for (var i = 0; i < arr.length; i++)
                        .custom-block.col
                            .mb-4
                                .img-holder(style="background-image: url('../../"+arr[i] + "')" )

mixin addsliderItem(obj)
    -for (var i = 0; i < obj.length; i++)
        .slider-item
            .slider-item.text-center
                blockquote
                    q.d-block.mb-4= obj[i].content
                    .d-flex.justify-content-center
                        .img-holder(style="background-image: url('../../"+obj[i].photo + "')" )
                        .description.text-left.ml-2
                            p
                                strong= obj[i].name
                            cite= obj[i].someText

mixin Logos(arr)
    .row.common-section
        - for (var i = 0; i < arr.length; i++)
            .col-md-6.col-lg-3.d-flex.align-items-center.justify-content-center.mb-5
                img(src=arr[i] alt=arr[i])

mixin personals(obj, theme)
    .container
        .row.justify-content-center
            -for (var i = 0; i < obj.length; i++)
                .col-md-5.col-lg-2
                    .d-flex.flex-column.align-items-center.mb-5.mb-lg-0
                        .img-holder(style="background-image: url('../../"+obj[i].photo + "')" )
                        .text-white.common-decoration-block
                            p= obj[i].name
                        +social(obj[i].socials, theme)

mixin social(obj, theme)
    if theme == "green"
        .team-social.justify-content-center
            ul.socials-contact.bg-light-green.nav
                each index, item in obj
                    li
                        a(class="bg-for-"+ item href=obj[item])
                            span(class='icon-' + item)
    else
        .team-social.justify-content-center
            ul.socials-contact.bg-light-gray.nav
                each index, item in obj
                    li
                        a(class="bg-for-"+ item href=obj[item])
                            span(class='icon-' + item)

mixin createPost(arr)
    .posts
        -for (var i=0; i < arr.length; i++)
            .d-flex.mb-3
                .img-holder.mr-2(style="background-image: url('../../"+ arr[i].photo + "')" )
                .text-content.d-flex.flex-column.justify-content-center
                    h4= arr[i].title
                    a.btn.btn-sm.text-uppercase.text-white.align-self-start(href="#" class="btn-" + arr[i].color)= arr[i].btnText

